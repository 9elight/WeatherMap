<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp">
    <TextView
        android:id="@+id/country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/flag_ic"
        style="@style/city_item_tv_style"
        tools:text="Страна"/>
    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/country_name"
        app:layout_constraintStart_toEndOf="@id/flag_ic"
        style="@style/city_item_tv_style"
        android:textSize="16sp"
        tools:text="Город"/>
    <ImageView
        android:id="@+id/flag_ic"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/country_name"
        app:layout_constraintBottom_toBottomOf="@id/city_name"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="4dp"
        tools:src="@drawable/common_google_signin_btn_icon_light_normal"/>
</androidx.constraintlayout.widget.ConstraintLayout>